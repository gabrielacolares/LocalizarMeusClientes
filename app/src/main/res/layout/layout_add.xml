<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_account_circle_black_48dp"
        android:id="@+id/img"
        android:layout_centerHorizontal="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_person_add_white_48dp"
                    android:backgroundTint="#9f9e9e"/>

                <EditText
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Nome"
                    android:id="@+id/nome"
                    android:textSize="14dp"
                    android:layout_marginTop="0dp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_email_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Email"
                android:textSize="14dp"
                android:id="@+id/email" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_cake_white_24dp"
                    android:backgroundTint="#9f9e9e"/>

                <EditText
                    android:inputType="date"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Data Nascimento"
                    android:textSize="14dp"
                    android:id="@+id/datanasc" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_call_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:inputType="phone"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Telefone"
                android:textSize="14dp"
                android:id="@+id/telefone"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#9f9e9e"/>

            <TextView
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:text="EndereÃ§o"
                android:textColor="#000000"
                android:textSize="14dp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_directions_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Rua"
                android:textSize="14dp"
                android:id="@+id/rua"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_room_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Numero"
                android:textSize="14dp"
                android:id="@+id/numero"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_filter_hdr_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Bairro"
                android:textSize="14dp"
                android:id="@+id/bairro"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_location_city_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Cidade"
                android:textSize="14dp"
                android:id="@+id/cidade"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


