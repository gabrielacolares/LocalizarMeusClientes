<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_account_circle_black_48dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_image"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_person_add_white_48dp"
                    android:backgroundTint="#9f9e9e"/>

                <EditText
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Nome"
                    android:id="@+id/nome"
                    android:textSize="14dp"
                    android:layout_marginTop="0dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img"
                    android:visibility="invisible"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_email_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Email"
                android:textSize="14dp"
                android:id="@+id/email" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_cake_white_24dp"
                    android:backgroundTint="#9f9e9e"/>

                <EditText
                    android:inputType="date"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Data Nascimento"
                    android:textSize="14dp"
                    android:id="@+id/datanasc"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:clickable="true" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_call_white_24dp"
                android:backgroundTint="#9f9e9e"/>

            <EditText
                android:inputType="phone"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Telefone"
                android:textSize="14dp"
                android:id="@+id/telefone"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#9f9e9e"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:text="Endereço"
                android:textColor="#000000"
                android:textSize="14dp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivLocal"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_directions_white_24dp"
                android:hint="Endereço"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:text="Clique na imagem para obter o endereço."
                android:id="@+id/tvplace"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:hint="Cidade"
                android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</RelativeLayout>


